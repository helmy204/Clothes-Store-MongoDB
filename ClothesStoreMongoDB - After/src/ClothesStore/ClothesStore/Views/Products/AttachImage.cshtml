@model ClothesStore.Models.Product

@{
    ViewData["Title"] = "Attach Image";
}

<h2>Attach Image</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AttachImage" enctype="multipart/form-data" method="post">
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                @Html.DisplayFor(model => model.Name)
            </div>

            <div class="form-group">
                <label class="control-label">Image</label>
                <input type="file" name="file" id="file" />
            </div>

            <div class="form-group">
                <input type="submit" value="Attach" class="btn btn-primary" />
            </div>
        </form>
        @if (Model.HasImage())
        {
            <img src="@Url.Action("GetImage", new {id = @Model.ImageId})" />
        }
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>
